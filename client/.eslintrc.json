{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "./node_modules/",
        "./node_modules/big.js",
        "*.spec.js",
        "*.spec.jsx"
    ],
    "plugins": [
        "react"
    ],
    "root": true
}
